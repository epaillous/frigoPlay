# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
# Page historique
GET 	/historique/							Application.historique
# Page recettes propos�es
GET     /recettesProposees/						Application.recettesProposees
# Page recettes favorites
GET     /recettesFavorites/						Application.recettesFavorites
#recette selectionnee
GET 	/recetteSelec/							Application.recetteSelec
# Page listes de courses
GET		/listesCourses/							Application.listesCourses
# Page archives
GET		/archives/								Application.archives
# Page profil
GET 	/profil/								Application.profil
# Page photo
GET 	/photo/								    Application.photo
# Page ancienEtat
GET		/ancienEtat/							Application.ancienEtat
# Déconnexion
GET 	/logout/								Controllers.logout

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}

# Import CRUD routes
*      /admin              						module:crud

# Upload des photos										
POST    /upload                                 Upload.upload

# Import Secure routes
*       /                                       module:secure
