# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
# Page historique
GET 	/historique/							Application.historique
# Page recettes
GET     /recettes/								Application.recettes
#recette donnees
GET 	/carottesRapees/						Application.carottesRapees
# Page listes de courses
GET		/listesCourses/							Application.listesCourses
# Page archives
GET		/archives/								Application.archives
# Page profil
GET 	/profil/								Application.profil

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}

# Import CRUD routes
*      /admin              						module:crud

# Upload des photos
POST    /upload                                 Application.upload
GET 	/upload									Application.upload

# Import Secure routes
*       /                                       module:secure